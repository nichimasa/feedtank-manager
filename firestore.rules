rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザー認証があれば全てのタンクと記録にアクセス可能
    match /tanks/{tankId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /dailyRecords/{recordId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
